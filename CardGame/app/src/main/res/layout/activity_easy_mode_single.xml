<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".gameScreens.EasyModeSingle">

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:fontFamily="sans-serif-black"

        android:text="Welcome To The Game"
        android:textAlignment="center"
        android:textColor="#8A3434"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="136dp"
        android:text="Point : "
        android:textColor="#322727"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/imageButton1002"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:text="Time : "
        android:textColor="#322727"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/imageButton1001"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/imageButton1001"
        android:layout_width="166dp"
        android:layout_height="166dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31"
        app:srcCompat="@drawable/img2" />

    <ImageButton
        android:id="@+id/imageButton1002"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/imageButton1001"
        app:layout_constraintTop_toTopOf="@+id/imageButton1001"
        app:srcCompat="@drawable/img2" />

    <ImageButton
        android:id="@+id/imageButton1003"
        android:layout_width="166dp"
        android:layout_height="166dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton1004"
        app:layout_constraintStart_toStartOf="@+id/imageButton1001"
        app:layout_constraintTop_toBottomOf="@+id/imageButton1001"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/img2" />

    <ImageButton
        android:id="@+id/imageButton1004"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="@+id/imageButton1002"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageButton1003"
        app:layout_constraintTop_toBottomOf="@+id/imageButton1002"
        app:srcCompat="@drawable/img2" />

    <TextView
        android:id="@+id/textPoint1"
        android:layout_width="38dp"
        android:layout_height="21dp"
        android:layout_marginStart="4dp"
        android:text="0"
        android:textColor="#322727"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="27dp"
        android:layout_height="21dp"
        android:layout_marginStart="4dp"
        android:text="0"
        android:textColor="#972727"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>